@model IEnumerable<CateringPro.Models.DishComplex>
@inject CateringPro.Core.SharedViewLocalizer Localizer

    <div class="complex-line container" style="background-color:yellow;">
        <div class="row">
            <div class="col-sm-4">
                <label> line DishCourse </label>
            </div>
            <div class="col-sm-4">
                <a class="add-complex-line"> Додати </a>
            </div>
        </div>
            @foreach (var it in Model)
            {

                <div class="row">
                    <div class="col-sm-1">
                        <a class="dialog-edit-icon"> <span class="fa fa-trash" aria-hidden="true"></span></a>
                    </div>
                    <div class="col-sm-4">
                        <img src="@Url.Action("GetPicture","Pictures",new { id=it.Dish.PictureId,width=40,height=40})" style="width:40px;height:40px;" />
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayFor(modelItem => it.Dish.Name)
                    </div>
                </div>
            }
        </div>
