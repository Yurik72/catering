@model CateringPro.Models.Ingredients
@inject CateringPro.Core.SharedViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit";
}
@if (true)
{
    <div class="modal-content col-lg-12 col-12">
        <div class="modal-header align-items-center col-12 px-0 px-md-3 px-lg-3" style="padding-top:20px">
            <h5 class="modal-title p-0" id="exampleModalLabel"
                style="font-size: 34px; line-height: 40px; font-weight: bold">
                Редагування інгредієнта
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <img src="../img/close-modal.svg" aria-hidden="true" alt="">
            </button>
        </div>
        <div class="modal-body col-auto p-0 mt-2 ">
            <form class="col-12 px-0 px-lg-3 px-md-3" asp-action="EditModal">
                <div class="row p-0 flex-lg-row flex-md-row flex-column">
                    <div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-9 col-md-9 col-12 input-row-black  align-content-center">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StockDate" />
                        <input type="hidden" asp-for="StockValue" />
                        <label asp-for="Name"
                               class="profile-form-title col-12 col-lg-4 col-md-4 p-0 d-flex align-items-center mb-0"></label>
                        <input asp-for="Name" class="form-control col-12 col-lg-8 col-md-8 pl-9"
                               style="height: 34px">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-0 flex-lg-row flex-md-row flex-column">
                    <div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-9 col-md-9 col-12 input-row-black  align-content-center">
                        <label asp-for="MeasureUnit"
                               class="profile-form-title col-12 col-lg-4 col-md-4 p-0 d-flex align-items-center mb-0"></label>
                        <input class="form-control col-12 col-lg-8 col-md-8 pl-9"
                               asp-for="MeasureUnit"
                               style="height: 34px">
                        <span asp-validation-for="MeasureUnit" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-0 flex-lg-row flex-md-row flex-column">
                    <div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-9 col-md-9 col-12 input-row-black  align-content-center">
                        <label asp-for="AvgPrice"
                               class="profile-form-title col-12 col-lg-4 col-md-4 p-0 d-flex align-items-center mb-0"></label>
                        <input type="hidden" asp-for="AvgPrice">
                        <input class="form-control col-12 col-lg-8 col-md-8 pl-9"
                               asp-for="AvgPrice" disabled
                               style="height: 34px; font-family: Open-Sans, sans-serif">
                        <span asp-validation-for="AvgPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-0 flex-lg-row flex-md-row flex-column">
                    <div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-9 col-md-9 col-12 input-row-black  align-content-center">
                        <label asp-for="LastPurchasePrice"
                               class="profile-form-title col-12 col-lg-4 col-md-4 p-0 d-flex align-items-center mb-0">Ост.закуп. Ціна</label>
                        <input type="hidden" asp-for="LastPurchasePrice">
                        <input class="form-control col-12 col-lg-8 col-md-8 pl-9"
                               asp-for="LastPurchasePrice" disabled
                               style="height: 34px; font-family: Open-Sans, sans-serif">
                        <span asp-validation-for="LastPurchasePrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-0 flex-column">
                    <div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-9 col-md-9 col-12 input-row-black  align-content-center">
                        <label asp-for="IngredientCategoriesId" 
                               class="profile-form-title col-12 col-lg-4 col-md-4 p-0 d-flex align-items-center mb-0 ">Категорія</label>
                        
                        <select asp-for="IngredientCategoriesId" class="form-control col-12 col-lg-8 col-md-8 pl-3" asp-items="ViewBag.IngredientCategoriesId"></select>
                        <span asp-validation-for="IngredientCategoriesId" class="text-danger"></span>
                    </div>
                </div>
            </form>

        </div>
        <div class="modal-footer justify-content-center border-0"
             style="font-size: 14px; font-weight: bold; line-height: 16px; padding: 40px 0 58px">
            <button type="button" class="btn btn-primary m-2 col-sm-4 col-xl-4 col-12"
                    style="background: #36C233; border: 1px solid #36C233; height: 48px" data-save="modal">
                @Localizer["Save"]
                </button>
            <button type="button" class="btn btn-secondary m-2 col-sm-4 col-xl-4 col-12 "
                    style="background: #ffffff; border: 1px solid #F15E25; height: 48px; color: #f15e25"
                    data-dismiss="modal">
                @Localizer["Cancel"]
            </button>
        </div>
    </div>
}
else
{
    <style>
        form dt {
            float: left;
            display: block;
            width: 30%;
        }

        dd select {
            width: 50%;
        }

        dd textarea {
            width: 100%;
        }
    </style>
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Localizer["Ingredient"]</h5>
            <button class="close" data-dismiss="modal" area-hidden="true">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <form asp-action="EditModal">
                <dl class="">


                    <dt>  <label asp-for="Name" class="control-label"></label></dt>

                    <dd>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StockDate" />
                        <input type="hidden" asp-for="StockValue" />
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </dd>

                    <dt>  <label asp-for="MeasureUnit" class="control-label"></label></dt>
                    <dd>
                        <input asp-for="MeasureUnit" class="form-control" />
                        <span asp-validation-for="MeasureUnit" class="text-danger"></span>
                    </dd>
                    <dt>  <label asp-for="AvgPrice" class="control-label"></label></dt>
                    <dd>
                        <input asp-for="AvgPrice" class="form-control" />
                        <span asp-validation-for="AvgPrice" class="text-danger"></span>
                    </dd>
                    <dt>  <label asp-for="LastPurchasePrice" class="control-label"></label></dt>
                    <dd>
                        <input asp-for="LastPurchasePrice" class="form-control" />
                        <span asp-validation-for="LastPurchasePrice" class="text-danger"></span>
                    </dd>
                    <dt>
                        <label asp-for="IngredientCategoriesId" class="control-label col-md-2"></label>
                    </dt>
                    <dd>

                        <select asp-for="IngredientCategoriesId" class="form-control" asp-items="ViewBag.IngredientCategoriesId"></select>
                        <span asp-validation-for="IngredientCategoriesId" class="text-danger"></span>

                    </dd>
                </dl>
            </form>
            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-2">
                    <button type="button" button class="btn btn-primary" data-save="modal">@Localizer["Save"]</button>
                </div>
                <div class="col-sm-1">
                </div>
                <div class="col-sm-2">
                    <button type="button" button class="btn btn-primary" data-dismiss="modal">@Localizer["Cancel"]</button>
                </div>

                <div class="col-sm-1">
                </div>

            </div>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
