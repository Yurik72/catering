                        @Html.DisplayFor(model => item.Quantity)
                    </td>*@
                @*<td>
                    </td>*@
                @{
                    totalGroup += it.Total;
                    totalDisGroup += it.Discount;
                }
            </tr>

        }
        {
            total += totalGroup;
            totalDis += totalDisGroup;
        }
        <tr class="heading">
            <td>@Localizer["Amount"]</td>
            <td></td>
            <td>@totalDisGroup</td>
            <td style="text-align:right">@totalGroup</td>

        </tr>
    }


}
