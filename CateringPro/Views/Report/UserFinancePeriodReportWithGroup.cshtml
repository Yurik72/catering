    else
    {
        <tr class="item daydate">
            <td colspan="4">
                @item.Key
            </td>

        </tr>
    }
    @if (item.SubGroups != null)
    {
        ViewDataDictionary vd = new ViewDataDictionary(ViewData);
        vd["level"] = level + 1;
