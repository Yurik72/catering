@model UserFinanceViewModel
@inject CateringPro.Core.SharedViewLocalizer Localizer

@if (true)
{

<div class="d-flex justify-content-center flex-column align-items-center">
    <div class="col-12 col-md-8 col-lg-9 p-0 d-flex align-items-start  flex-column">
        <input type="hidden" id="user-fin-id" value="@Model.UserId" />
        <input type="hidden" id="user-fin-companyid" value="@Model.CompanyId" />
        <span class="h2 mb-3" style="font-weight: 500; font-size: 18px; line-height: 21px; color: #232323;">Фінанси</span>
        <div class="col-12 col-md-7 my-2 col-lg-6 p-0  d-flex flex-row justify-content-between align-items-lg-center align-items-md-center"
             style="font-weight: normal; font-size: 16px;">
            <span class=" m-0">@Localizer["Balance"]</span>
            <span class=" m-0" style="font-family: Open-Sans">@Model.Finance.Balance</span>
        </div>
        <div class="col-12 col-md-7 my-2 col-lg-6 p-0  d-flex flex-row justify-content-between align-items-lg-center align-items-md-center"
             style="font-weight: normal; font-size: 16px;">
            <span class=" m-0">@Localizer["Income"]</span>
            <span class=" m-0" style="font-family: Open-Sans">@Model.Finance.TotalIncome</span>
        </div>
        <div class="col-12 col-md-7 my-2 col-lg-6 p-0  d-flex flex-row justify-content-between align-items-lg-center align-items-md-center"
             style="font-weight: normal; font-size: 16px;">
            <span class=" m-0">@Localizer["OutCome"]</span>
            <span class=" m-0" style="font-family: Open-Sans">@Model.Finance.TotalOutCome</span>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div id="addbalance" class="col-6 p-0 justify-content-center" style="height: 48px">
                <button type="button" id="create-btn"
                        class=" btn btn-xl btn-outline-danger float-lg-right justify-content-center float-md-none font-weight-bold btn-block "
                        onmousemove="this.style.background='#36C233'; this.style.color='#ffffff'"
                        onmouseout="this.style.background='#ffffff'; this.style.color='#36C233'"
                        style="background: #ffffff; border-color: #36C233; outline: none; height: 48px; color: #36C233; display: flex; align-items: center; justify-content: space-evenly; font-size: 14px;">
                    &#65291;@Localizer["AddBalance"]
                </button>
            </div>
        </div>
    </div>

    <div class="container border rounded">
        <div class="row justify-content-center">
            <div class="col-12 bg-info text-white">
                @Localizer["Income"]
            </div>

        </div>

        @foreach (var it in Model.Incomes)
        {
            <div class="row">

                <div class="col-4">
                    <span>@it.TransactionDate</span>
                </div>
                <div class="col-4">
                    <span>@it.Comments</span>
                </div>
                <div class="col-4">
                    <span>@it.Amount</span>
                </div>
            </div>
        }

    </div>
    <div class="container border rounded">
        <div class="row justify-content-center">
            <div class="col-12 bg-info text-white">
                @Localizer["OutCome"]
            </div>

        </div>
        @foreach (var it in Model.Outcomes)
        {
            <div class="row">

                <div class="col-4">
                    <span>@it.TransactionDate</span>
                </div>
                <div class="col-4">
                    <span>@it.Comments</span>
                </div>
                <div class="col-4">
                    <span>@it.Amount</span>
                </div>
            </div>
        }
    </div>
    @*<div class="form-group d-flex flex-lg-row flex-md-row flex-column col-lg-6 col-md-6 col-12 input-row-black justify-content-end align-content-center">
            <label asp-for=Finance.UserFinIncomes
                   class="profile-form-title col-12 col-lg-3 col-md-3 p-0 d-flex align-items-center mb-0">
            </label>
            <input asp-for=Finance.UserFinIncomes
                   type="text" class="form-control col-12 col-lg-6 col-md-6 pl-3"
                   id="input-add-money-on-account" placeholder="">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Company Setting Save"]" class="btn btn-primary" />
            </div>
        </div>*@
</div>
}

else
{
