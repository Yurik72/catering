            </div>

            @foreach (var it in Model.Incomes)
            {
                <div class="row">

                    <div class="col-4">
                        <span>@it.TransactionDate</span>
                    </div>
                    <div class="col-4">
                        <span>@it.Comments</span>
                    </div>
                    <div class="col-4">
