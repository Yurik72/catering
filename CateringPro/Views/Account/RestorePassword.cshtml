@model RegisterViewModel
@inject CateringPro.Core.SharedViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["To restore password"];
}

<h2>@Localizer["To restore password"]</h2>
<form asp-controller="Account" asp-action="RestoreInputPassword" method="post" class="form-horizontal" role="form">
    <hr />
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,700" rel="stylesheet">
    </head>
    <body data-spy="scroll" data-target="#pb-navbar" data-offset="200">

        <nav class="navbar navbar-expand-lg site-navbar navbar-light bg-light" id="pb-navbar">

            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <section class="site-section" id="section-portfolio">
            <div class="container">
                <div class="row">
                    <div class="section-heading text-center col-md-12">
                        <h2>Для того щоб відновити пароль треба ввести пошту, на яку було зареєстровано обліковий запис.</h2>
                        <br />
                        @Html.ValidationSummary()
                        <br />
                        <input asp-controller="Account" asp-action="RestoreInputPassword" class="center-block" name="inputEmail" placeholder="Email">
                        <br />
                        <br />
                        <p>
                            <button asp-controller="Account" asp-action="RestoreInputPassword" type="submit" class="btn btn-primary" px-4 py-2 btn-sm smoothscroll">@Localizer["Send"]</button>
                        </p>
                    </div>
                </div>

            </div>
        </section>
        <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
        <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>
    </body>
</html>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
