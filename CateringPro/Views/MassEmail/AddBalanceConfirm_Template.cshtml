@model UserAddBalanceConfirmModel
@using CateringPro.Core
@inject Microsoft.Extensions.Options.IOptions<UIOption> pageOptions
@{
    Layout = null;
    string user_name = @Model.User.NameSurname;
    if (Model.ParentUser != null)
        user_name = Model.ParentUser.NameSurname;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Підтвердження зарахування грошей
    </title>
</head>
<body>
    <p>
        <span lang="uk">Шановний <strong>@Model.User.NameSurname</strong>, </span>
    </p>
    <p><span lang="uk">Ради інформувати Вас що ми отримали підтвердження платежу на суму <strong>@Model.FinanceIncome.Amount @pageOptions.Value.CurrencySymbol</strong>, </span></p>
    <p><span lang="uk">як оплата харчування вашої дитини <strong>@Model.User.ChildNameSurname</strong>.</span></p>
    <p>&nbsp;</p>
    <p><span lang="uk">Ваш поточний баланс становить <strong>@Model.Finance.Balance @pageOptions.Value.CurrencySymbol</strong>.</span></p>
    <h4>С Повагою,</h4>
    <h4>Команда "Кабачок групп"</h4>
    <p><img title="" src="data:image/png;base64," alt="" /></p>
</body>
</html>
