@using Microsoft.AspNetCore.Identity

@inject SignInManager<CompanyUser> SignInManager
@inject CateringPro.Core.SharedViewLocalizer Localizer
@inject CateringPro.Repositories.ICompanyUserRepository cu_repo
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <title>Кабачок</title>
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/css/bootstrap.min.css"
              integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
</head>

<body>
    <header>
        <div class="container p-0">
            <nav class="navbar navbar-light flex-grow-0 px-0">
                <a class="navbar-brand" href="#"><img src="~/img/logo.png" alt="Catering logo"></a>

                @await Html.PartialAsync("_LoginPartialCabachok")
            </nav>
        </div>
    </header>
    <main class="row" style="flex-grow: 1">
        <div class="container">
            @RenderBody()
        </div>
    </main>


    @await Html.PartialAsync("_Footer")
    <environment names="Development,Staging,Production">
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
