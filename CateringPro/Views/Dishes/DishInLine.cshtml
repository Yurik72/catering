            <img src="@Url.Action("GetPicture", "Pictures", new { Model.PictureId, width = 40, height = 40 })" style="width:40px;height:40px;" />
        </div>
        <div class="col-sm-2">
            @Model.Name
        </div>
        <div class="col-sm-1">
            <a class="dialog-edit-icon delete-item"> <span class="fa fa-trash" aria-hidden="true"></span></a>
