@model CateringPro.Models.Dish

@{
    ViewData["Title"] = "Edit";
}

    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Блюдо</h4>
        </div>
        <div class="modal-body">
            <form asp-action="EditModal">
                <dl class="dl-horizontal">
                    <dd><input type="hidden" asp-for="Id" /></dd>

                    <dt>  <label asp-for="Code" class="control-label"></label></dt>
                    <dd>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </dd>


                    <dt>  <label asp-for="Name" class="control-label"></label></dt>
                    <dd>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </dd>
                    <dt>
                        <label asp-for="CategoriesId" class="control-label col-md-2"></label>
                    </dt>
                    <dd>

                        <select asp-for="CategoriesId" class="form-control" asp-items="ViewBag.CategoriesId"></select>
                        <span asp-validation-for="CategoriesId" class="text-danger"></span>

                    </dd>
                    <dt>Цена</dt>
                    <dd>@Html.EditorFor(model => model.Price)</dd>

                    <dt>Описание</dt>
                    <dd>@Html.EditorFor(model => model.Description)</dd>
                </dl>
            </form>
            <div class="row">
                <div class="col-sm-1">
                </div>
                <div class="col-sm-2">
                    <button type="button" button class="btn btn-primary" data-save="modal">Save</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" button class="btn btn-primary"data-dismiss="modal" >Cancel</button>
                </div>

                <div class="col-sm-1">
                </div>

            </div>
            </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
